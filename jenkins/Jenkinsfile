pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "dcerdassan/devopssnapfinance"
        BUILD_TAG = "${env.BUILD_NUMBER}"
    }

    stages {

        stage('Clean Workspace') {
            steps {
                echo "Limpiando workspace..."
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                echo "Clonando el repo desde GitHub (rama UAT)..."
                git branch: 'UAT',
                    url: 'https://github.com/Alephdjcs/devops-challenge.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Pre-Build Script') {
            steps {
                echo "Ejecutando Pre-Build script..."
                sh 'bash ${WORKSPACE}/jenkins/scripts/pre_build.sh'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Construyendo la imagen Docker..."
                    sh "docker build -t ${DOCKER_IMAGE}:${BUILD_TAG} ./application"
                    echo "Imagen Docker construida: ${DOCKER_IMAGE}:${BUILD_TAG}"
                }
            }
        }

        stage('Docker Login & Push') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub-creds',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        echo "Logueando en Docker Hub..."
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'

                        echo "Subiendo la imagen a Docker Hub..."
                        sh "docker push ${DOCKER_IMAGE}:${BUILD_TAG}"
                        echo "Imagen subida correctamente: ${DOCKER_IMAGE}:${BUILD_TAG}"
                    }
                }
            }
        }

        stage('Post-Build Script') {
            steps {
                echo "Ejecutando Post-Build script..."
                sh 'bash ${WORKSPACE}/jenkins/scripts/post_build.sh'
            }
        }

        stage('Debug') {
            steps {
                echo "Verificando estructura de archivos en workspace..."
                sh 'ls -R ${WORKSPACE}/jenkins'
            }
        }
    }

    post {
        success {
            echo "Pipeline completado exitosamente!"
        }
        failure {
            echo "Pipeline fall√≥. Revisa los logs."
        }
    }
}
